<div class='placeForm wrap d-flex align-items-center flex-column'>


	<h1 class='placeForm-heading'>Edit <%= @place.title %></h1>	

	<%= simple_form_for @place do |f| %>

		<div class="form-group placeForm-route-name">
			<h6>Route Name</h6>
	    <%= f.input :title, 
	    		placeholder: 'Enter route name',
	    		label: false 
	    %>
	  </div>

	  <div class="form-group placeForm-difficulty">
	  	<h6>Difficulty</h6>
	    	<%= f.input :difficulty, 
	    			collection: ['Casual stroll', 'Could consider this to be exercise', 'The ticker is going', 'Stair master'], 
	    			:class => 'form-control',
	    			selected: 'Casual stroll',
	    			label: false
	    	%>
	  </div>

	  <div class="form-group placeForm-terrain">
	  	<h6>Terrain</h6>
		  	<%= f.input :terrain,
		  			as: :check_boxes,
		  			collection: Place.terrain_options,
		  			label: false
		  	%>
  	</div>

  	<div class="form-group placeForm-time">
  		<h6>Time</h6>
	    <div class='d-flex align-items-center'>
	    	<div class='placeForm-time-field'>
		    	<%= number_field_tag 'place[hours]', nil, options = { min: 0 } %>
		    	<small>* Hours</small>
	    	</div>
	    	<div class='placeForm-time-field'>
	    		<%= number_field_tag 'place[minutes]', nil, options = { within: 0...60 } %>
	    		<small>* Minutes</small>
	    	</div>
	  	</div>
	  </div>

	  <div class="form-group placeForm-distance">
	    <h6>Distance</h6>
	    	<%= f.input :distance,
	    			label: false,
	    			as: :float,
	    			input_html: { min: '0' },
	    			placeholder: 'Miles'
	    	%>  	
  	</div>

  	<div class="form-group placeForm-description">
  		<h6>Description</h6>
  		<%= f.input :description,
  				label: false,
  				input_html: { rows: 5 }
  		%>
	  </div>

	  <div class="form-group placeForm-directions">
  		<h6>Directions</h6>
  		<%= f.input :directions,
  				label: false,
  				input_html: { rows: 5 }
  		%>
	  </div>

	  <div class='d-flex placeForm-buttons'>
	  	<%= f.submit 'Submit', class: 'btn btn-primary'%>
	  	<%= f.button :button, "Reset", type: :reset, class: "btn btn-secondary" %>
	  	<%= link_to "Cancel", root_path, { :class=>"btn btn-secondary" } %>
	  </div>

	<% end %>

</div>